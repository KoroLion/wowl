{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Classic",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/*.spec.ts"
  ]
}
